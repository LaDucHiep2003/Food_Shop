
mixin search(keyword)
    form(id = "form-search")
        div(class = "form-group inner-search")
            input(
                type="text"
                placeholder = "Nhập từ khóa"
                name = "keyword"
                class = "form-control"
                value = keyword
            ) 
            .input-group-append
                button(
                    class = "btn-submit" 
                    type = "submit"
                ) 
                    i(class ="fa-solid fa-magnifying-glass")