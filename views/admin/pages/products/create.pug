
extends ../../layout/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug

block main 
    +alert-error(5000)
    +success(5000)
    .section-products
        .container-fluid
            +success(5000)
            .header
                .inner-head
                    .row 
                        div(class = "col-12") 
                            p(class = "inner-title") ShopWinMart
                    .row 
                        div(class = "col-6") 
                            p(class = "inner-desc") Thêm mới sản phẩm
            .inner-body
                form(
                    action= `${prefixAdmin}/products/create`
                    enctype="multipart/form-data"
                    id = "form-create-product"
                    method = "POST"
                ) 

                    div(class = "form-group")
                        label(for="title") Tiêu đề 
                        input(
                            type="text"
                            class = "form-control"
                            id = "title"
                            name = "title"
                            
                        )
                    div(class = "form-group")
                        label(for="product_category_id") Danh mục
                        select(
                            name = "product_category_id"
                            id = "product_category_id"
                            class = "form-control"
                        )
                            option(value = "") -----Chon danh mục-----
                            if(category)
                                +select-tree(category) 
                    div(class = "form-group")
                        label(for="desc") Mô tả 
                        textarea(
                            class = "form-control textarea-mce"
                            id = "desc"
                            name = "description"
                            row = "5"
                        ) 
                    div(class = "form-group form-check form-check-inline")
                        
                        input(
                            type="radio"
                            class = "form-check-input"
                            id = "featured1"
                            name = "featured"
                            value = "1"
                        ) 
                        label(for = "feature1" class = "form-check-label") Nổi bật

                    div(class = "form-group form-check form-check-inline")
                        
                        input(
                            type="radio"
                            class = "form-check-input"
                            id = "featured0"
                            name = "featured"
                            value = "0"
                            checked
                        ) 
                        label(for = "featured0" class = "form-check-label") Không nổi bật
                    


                    div(class = "form-group")
                        label(for="price") Giá
                        input(
                            type="price"
                            class = "form-control"
                            id = "price"
                            name = "price"
                            value = "0"
                            min = "0"
                        ) 
                    
                    div(class = "form-group")
                        label(for="discount") % Giảm giá 
                        input(
                            type="number"
                            class = "form-control"
                            id = "discount"
                            name = "discountPercentage"
                            value = "0"
                            min = "0"

                        ) 
                    
                    div(class = "form-group")
                        label(for="stock") Số lượng
                        input(
                            type="text"
                            class = "form-control"
                            id = "stock"
                            name = "stock"
                            value = "0"
                            min = "0"
                        ) 
                    div(
                        class = "form-group"
                        upload-image
                    )
                        
                        label(for="image") Ảnh
                        input(
                            type="file"
                            class = "form-control-file"
                            id = "image"
                            name = "image"
                            accept = "image/*"
                            upload-image-input
                        ) 
                        button(
                            class = "btn-cencel-upload d-none"
                            cencel-upload) X
                        
                        img(
                            src=""
                            class = "image-preview"
                            upload-image-preview
                        )
                    div(class = "form-group")
                        label(for="position") Vị trí
                        input(
                            type="text"
                            class = "form-control mb-2"
                            id = "position"
                            name = "position"
                            placeholder = "Tự động tăng"
                            min = "1"
                        ) 
                    div(class = "form-group form-check form-check-inline")
                        
                        input(
                            type="radio"
                            class = "form-check-input"
                            id = "statusActive"
                            name = "status"
                            value = "active"
                            checked
                        ) 
                        label(for = "statusActive" class = "form-check-label") Hoạt động

                    div(class = "form-group form-check form-check-inline")
                        
                        input(
                            type="radio"
                            class = "form-check-input"
                            id = "statusInActive"
                            name = "status"
                            value = "inactive"
                        ) 
                        label(for = "statusInActive" class = "form-check-label") Dừng hoạt động
                    
                    div(class = "form-group")
                        button(
                            type = "submit"
                            class = "btn btn-warning mt-2"
                        ) Tạo mới
        


    script(src="/admin/js/product.js") 