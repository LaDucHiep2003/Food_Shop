extends ../../layout/default.pug
include ../../mixins/alert.pug


block main 
    +alert-error(5000)
    +success(5000)
    .container-product
        .product-header Chỉnh sửa nhóm quyền
        form(
            action= `${prefixAdmin}/roles/edit/${data.id}?_method=PATCH`
            id = "form-create-product"
            method = "POST"
        ) 
            div(class = "form-add-data")
                label(for="title") Tiêu đề 
                input(
                    type="text"
                    class = "input-search"
                    id = "title"
                    name = "title"     
                    value = data.title             
                )

            div(class = "form-add-data")
                label(for="desc") Mô tả 
                textarea(
                    class = "input-search textarea-mce"
                    id = "desc"
                    name = "description"
                    row = "5"
                    value = data.description
                ) 
            div(class = "form-add-data")
                button(
                    type = "submit"
                    class = "btn btn-warning"
                ) Áp dụng