extends ../../layout/default.pug
include ../../mixins/alert.pug


block main 
    +alert-error(5000)
    +success(5000)
    .section-products
        .container-fluid
            +success(5000)
            .header
                .inner-head
                    .row 
                        div(class = "col-12") 
                            p(class = "inner-title") ShopWinMart
                    .row 
                        div(class = "col-6") 
                            p(class = "inner-desc") Chỉnh sửa nhóm quyền
        .inner-body
            form(
                action= `${prefixAdmin}/roles/edit/${data.id}?_method=PATCH`
                id = "form-create-product"
                method = "POST"
            ) 
                div(class = "form-group")
                    label(for="title") Tiêu đề 
                    input(
                        type="text"
                        class = "form-control"
                        id = "title"
                        name = "title"     
                        value = data.title             
                    )

                div(class = "form-group")
                    label(for="desc") Mô tả 
                    textarea(
                        class = "form-control textarea-mce"
                        id = "desc"
                        name = "description"
                        row = "5"
                        value = data.description
                    ) 
                div(class = "form-group")
                    button(
                        type = "submit"
                        class = "btn btn-warning"
                    ) Áp dụng